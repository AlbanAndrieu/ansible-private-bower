{
    "port": 5678,
    "registryFile": "./bowerRepository.json",
    "timeout": 144000,
    "public": {
        "disabled": false,
        "registry": "http://bower.herokuapp.com/packages/",
        "registryFile": "./bowerRepositoryPublic.json",
        "whitelist": [],
        "blacklist": []
    },
    "authentication": {
        "enabled": {{ private_bower_authentication_enabled}},
        "key": "{{ private_bower_authentication_key }}"
    },
    "repositoryCache": {
        "cachePrivate": {{ private_bower_repository_cache_cache_private }},
        "git": {
            "enabled": {{ private_bower_repository_cache_git_enabled }},
            "cacheDirectory": "./gitRepoCache",
            "host": "localhost",
            "port": 6789,
            "publicAccessURL": null,
            "refreshTimeout": 10,
            "parameters": {
                "timeout": 60000,
                "max-connections": 100
            }
        },
        "svn": {
            "enabled": false,
            "cacheDirectory": "./svnRepoCache",
            "host": "localhost",
            "port": 7891,
            "publicAccessURL": null,
            "refreshTimeout": 10
        }
    },
    "proxySettings" : {
        "enabled": false,
        "host": "proxy",
        "username": "name",
        "password" : "pass",
        "port": 8080,
        "tunnel": false
    },
    "log4js" : {
        "enabled": false,
        "configPath" : "log4js.conf.json"
    }
}
