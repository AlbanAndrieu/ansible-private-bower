#!/bin/sh
# {{ ansible_managed }}
# chkconfig: 235 99 10
# description: Start or stop the Private bower server
#
### BEGIN INIT INFO
# Provides: private-bower
# Required-Start: $network $syslog
# Required-Stop: $network
# Default-Start: 2 3 5
# Default-Stop: 0 1 6
# Description: Start or stop the Private bower server
### END INIT INFO

if [ -z "$1" ]; then
  echo "`basename $0` {start|stop}"
  exit
fi

cd {{ private_bower_base_dir }}

case "$1" in
start)
  exec sudo -u www-data private-bower --config bower.conf.json >> /var/log/private-bower.log 2>&1
;;
restart)
  pkill -f private-bower
  exec sudo -u www-data private-bower --config bower.conf.json >> /var/log/private-bower.log 2>&1
;;
stop)
  pkill -f private-bower
;;
esac
